
    
    <h1> Books</h1>

    
    <table>
     <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     
     <tbody>
      <% @blogs.each do |blog| %>
      <tr>
       <td>
        <%= blog.title %>
       </td>
       <td>
        <%= blog.body %>
       </td>
       <td>
        <%= link_to "show",blog_path(blog.id),class:	"show_{blog.id}" %>
        <%= link_to "edit", edit_blog_path(blog.id),class: "edit_{blog.id}"	 %>
        <%= link_to "delete",blog_path(blog.id), method: :delete, data: {confirm: "Are you sure ?"},class:"destroy_{blog.id}" %>
       </td>
        <% end %>
      </tr>
         
     </tbody>
    </table>
    
         <h3>New books</h3>

    <%= form_for(@blog) do |f| %>

    <h4> Title</h4> 
    <%= f.text_field :title, class: "book_title"%>
 
   <h4> Body</h4>
    <%= f.text_area :body, class: "book_body" %>
   <br> <%= f.submit 'Create Book' %> </br>

    <% end %>    

